<body>
  {# src\Devschool\CinemaBundle\Resources\views\Film\list.html.twig #}
  {% extends 'DevschoolCinemaBundle::layout.html.twig' %}
<div class="container">

    <div class="row">

        <div class="col-md-3">
            <p class="lead">Cinéma</p>
            <div class="list-group">
                <a href="cinema-films.html" class="list-group-item active">Films</a>
                <a href="cinema-realisateurs.html" class="list-group-item">Réalisateurs</a>
            </div>
        </div>
        {% block body %}
        <div class="col-md-9">

            <h2>{% block title %}Liste des Films{% endblock %}</h2>
            <br />

            {% for film in films %}

              <div class="thumbnail">
                <div class="caption-full">
                  <h4 class="pull-right">{{film.genre}}</h4>
                  <h4>{{ titre|upper }}</h4>
                  <p>{{film.synopsis}}</p>
                </div>
                <div class="ratings">
                    <p class="pull-right">sorti le {{film.dateDeSortie}}</p>
                    <p>Réalisé par : <a href="cinema-films-realisateur.html">{{ film.realisateur }}</a></p>
                </div>
              </div>
              {% endfor %}
          </div>
      {% endblock %}
