{# src\Devschool\CinemaBundle\Resources\views\Realisateur\list.html.twig #}
{% extends 'DevschoolCinemaBundle::layout.html.twig' %}

{% block title %}Liste des Réalisateurs {% endblock %}

{% block body %}

<div class="container">

    <div class="row">

        <div class="col-md-3">
            <p class="lead">Cinéma</p>
            <div class="list-group">
                <a href="films" class="list-group-item ">Films</a>
                <a href="realisateurs" class="list-group-item active">Réalisateurs</a>
            </div>
        </div>

        <h2>Liste des Réalisateurs</h2>
        <div class="col-md-9">

        <br />

        {% for realisateur in realisateurs %}
        <div class="well">
                    <div class="row">
                        <div class="col-md-12">
                        <strong>{{ realisateur.prenom|upper }} {{ realisateur.nom|upper }} ({{"now"|date('Y') - realisateur.dateDeNaissance|date('Y')}} ans)</strong>

                        <br /><br />
                        <p>{{realisateur.description}}</p>
                        <hr />
                        <div class="text-right">
                          <a href="{{path('page_film_realisateur', {'id':realisateur.id}) }}" class="btn btn-success">Voir ses films</a>
                        </div>
                      </div>
                              </div>
                      </div>


              {% endfor %}
        {% endblock %}
