{# src\Devschool\AdminBundle\Resources\views\Film\list.html.twig #}
{% extends 'DevschoolAdminBundle::layout.html.twig' %}

{% block title %}<h1>Liste des Films :</h1>{% endblock %}

{% block body %}
<div class="container">
    <div class="row">

        <div class="col-md-3">
            <p class="lead"> Admin Film</p>
            <div class="list-group">
              <a href="{{ path('admin_genre_liste') }}" class="list-group-item active"> Modifier les genres</a>
              <a href="{{ path('admin_realisateur_liste') }}" class="list-group-item active"> Modifier les Realisateurs</a>
            </div>
        </div>

    {% for film in films %}
    <div class="container-genre">
      <div class="list-genre">
        <div class="item-genre">
            <a href="{{ path('admin_film_modif', {'id': film.id}) }}">{{ film.titre }}</a>
            <a href="{{ path('admin_film_supprimer', {'id': film.id}) }}">(x)</a>
            </div>
          </div>
        </div>
    {% endfor %}
    <div class="col-lg-12 bouton">
      <div class="btn btn-secondary">
        <a href="{{ path('admin_film_ajout') }}">Ajouter</a>
      </div>
    </div>
  </div>
{% endblock %}
